extends layout

block title
  title Duits-Nederlandse vertaling van #{deStr}

block breadcrumbs
  ul.breadcrumb
    li
      a(href="/") Home
    li
      a(href="/duits-nederlands") Duits-Nederlands
    li.active
      | #{deStr}

block results
  each termEntry in termEntries
    .panel.panel-default
      .panel-heading
        .panel-title
          ul.pager
            each sf in termEntry.subjectFields
              li
                a(href='/duits-nederlands/vakgebied/'+sf.termUrl ) #{sf.termStr}                  
      .panel-body
        p Duitse begrip:
        each term in termEntry.de
          p.lead #{term.termStr}
        p Nederlandse vertaling:  
        each term in termEntry.nl
          blockquote #{term.termStr}
      .panel-footer
        | ID: #{termEntry.id}
        if ( termEntry.note )
          | . Opmerking: <i>#{termEntry.note}</i>
